[Unit]
Description=gitiary GitHub commit indexer
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/home/xai/DEV/gitiary
ExecStart=/usr/bin/npm run index
StandardOutput=journal
StandardError=journal
SyslogIdentifier=gitiary-indexer

[Install]
WantedBy=multi-user.target
